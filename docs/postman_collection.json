{
  "info": {
    "name": "Bus Reservation API",
    "description": "Colección de endpoints para el sistema de reservas de buses",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "bus-reservation-api"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cedula\": \"1234567890\",\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"telefono\": \"0987654321\",\n  \"paisOrigen\": \"Ecuador\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cedula\": \"1234567890\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Reservas",
      "item": [
        {
          "name": "Get All Reservas (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reservas?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reservas"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "reserved",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Reserva",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ruta\": \"{{rutaId}}\",\n  \"seatNumber\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/reservas",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reservas"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Reservas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reservas/mine?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reservas", "mine"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Boletos",
      "item": [
        {
          "name": "Get All Boletos (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/boletos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "boletos"]
            }
          },
          "response": []
        },
        {
          "name": "Create Boleto",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reserva\": \"{{reservaId}}\",\n  \"seatNumber\": 5\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/boletos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "boletos"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Stats",
      "item": [
        {
          "name": "Get Reservas Stats (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/stats/reservas?from=2024-01-01&to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["api", "stats", "reservas"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01",
                  "disabled": true
                },
                {
                  "key": "to",
                  "value": "2024-12-31",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "rutaId",
      "value": "",
      "type": "string"
    },
    {
      "key": "reservaId",
      "value": "",
      "type": "string"
    }
  ]
}

